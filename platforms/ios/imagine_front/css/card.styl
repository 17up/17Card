@import './mixin'

c2 = #2980b9
c1 = #3498db
max_width = 320px
max_height = 428px
ctop = 70px

article
	display block
	width 100%
	height max_height
.card_item
	width max_width
	background c2
	height max_height
	position relative
	.pane1
		> div
			font-size 36px
			vertical-middle 80px
			text_center()
		img.u_word
			width max_width
			vertical-middle-auto()
			z-index 5
		.empty_tip
			margin-top 40px
			color c1
			z-index 1
		.title
			line-height 80px
			text-shadow-black()
			z-index 9
	.pane2
		padding 0
		margin 0
		position relative
		.empty_tip
			font-size 16px
			color c1
			vertical-middle 20px
			text_center()
		.wp.active
			width max_width
			height max_height
			position absolute
			top 0
			left 0
			z-index 4
		.wp
			width (max_width/2)
			height (max_height/2)
			float left
			background rgba(0,0,0,0.4)
			z-index 3
			img.o_word
				width 100%
#info
	.container
		width 320px
		> div
			padding 0 20px
			margin-bottom 15px
		.title
			text-align center
			font-size 26px
			margin-top 10px
		.tagg
			border-radius 8px
			background c2
			padding 0 5px
			margin 3px
			display inline-block
		.con
			margin-bottom 5px
			.pos
				font-style italic
			.text
				margin-left 3px


