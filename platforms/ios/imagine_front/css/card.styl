@import './mixin'

c2 = #2980b9
c1 = #3498db
max_width = 320px
max_height = 428px
ctop = 70px

article.active
	display block
article
	display none
.card_item
	height max_height
	position absolute
	width 100%
	left 0
	top ctop
	unselectable()
	.card_wraper
		position relative
		width 100%
		height 100%
		background c2
		> div
			transition(all,0.5s,ease-in)
			vertical-middle max_height
			horizontal-center max_width
			overflow hidden
		.card_facade
			img.u_word
				width max_width
				vertical-middle-auto()
				z-index 5
			.empty_tip
				font-size 36px
				vertical-middle 80px
				text_center()
				margin-top 40px
				color c1
				z-index 1
			.title
				line-height 80px
				font-size 36px
				text-shadow-black()
				vertical-middle 80px
				text_center()
				z-index 9
			&:active
				background c1
		.card_obverse
			text-shadow-inset()
			display none
			.content
				padding 20px 20px 0 20px
				font-size 16px
			ul.sentence
				margin 0
				padding 10px 20px 0 20px
				list-style none
				li
					margin 10px 0
					padding 0 10px
					border-left 4px solid c1
